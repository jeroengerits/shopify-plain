<section aria-labelledby='text-section-title'>
  <div>
    <h2 id='text-section-title'>{{ section.settings.title | default: 'Section Title' }}</h2>
    <div>
      {{ section.settings.text }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Text Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text Content",
      "default": "<p>Add your text content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Text Section"
    }
  ]
}
{% endschema %}
