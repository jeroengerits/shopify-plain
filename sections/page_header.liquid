<header role='banner' class='flex items-center justify-between p-3'>
  <h1 class='text-2xl font-medium lowercase'>
    <a href='/' class='text-neutral-800 transition-colors hover:text-neutral-600'>
      {{ shop.name }}
    </a>
  </h1>
  <div class='flex items-center'>
    {% if cart.item_count > 0 %}
      <a
        href='/cart'
        title='You have {{ cart.item_count }} items in your cart'
        class='group mr-2 flex items-center gap-1.5 text-neutral-600 transition-colors hover:text-neutral-800'
      >
        <span>
          {{ cart.item_count | round: 0 }}
        </span>
        <span>
          {% render 'cart-icon', class: 'size-6' %}
        </span>
        <span class='hidden sm:inline'> Cart </span>
      </a>
    {% endif %}
  </div>
</header>
