<section aria-labelledby='collection-title'>
  <div>
    <header>
      <h1 id='collection-title'>{{ collection.title }}</h1>

      {% if collection.description != blank %}
        <div>{{ collection.description }}</div>
      {% endif %}
    </header>

    <div>
      {% paginate collection.products by 12 %}
        <div role='grid' aria-label='Product grid'>
          {% for product in collection.products %}
            <article role='gridcell'>
              <a href='{{ product.url }}'>
                {% if product.featured_image %}
                  <img
                    src='{{ product.featured_image | img_url: 'medium' }}'
                    alt='{{ product.featured_image.alt | escape }}'
                    width='300'
                    height='300'
                    loading='lazy'
                  >
                {% endif %}
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
              </a>
            </article>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <nav role='navigation' aria-label='Pagination'>
            <div>
              {% if paginate.previous %}
                <a href='{{ paginate.previous.url }}' aria-label='Previous page'>Previous</a>
              {% endif %}

              <span>Page {{ paginate.current_page }} of {{ paginate.pages }}</span>

              {% if paginate.next %}
                <a href='{{ paginate.next.url }}' aria-label='Next page'>Next</a>
              {% endif %}
            </div>
          </nav>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Products",
  "settings": [],
  "presets": [
    {
      "name": "Collection Products"
    }
  ]
}
{% endschema %}
